create spfile='<%= spfile_location -%>/<%= name %>/spfile<%= name -%>.ora' FROM pfile='<%= init_ora_file -%>';
<% end -%>

shutdown immediate

host srvctl enable database -d <%= name %>
host srvctl start database -d <%= name %>

spool off
exit
